<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="google_2fa_frame">
		<property name="title" translatable="yes">Two Factor Authentication</property>
		<widget class="AdminNote">
			<property name="content" translatable="yes">Youâ€™ll need the six-digit code from your authenticator to continue.</property>
		</widget>
		<widget class="SwatForm" id="google_2fa_form">
			<widget class="SwatFormField" id="google_2fa_token_field">
				<property name="title" translatable="yes">Verification code</property>
				<widget class="SwatPasswordEntry" id="google_2fa">
					<property name="autocomplete" type="boolean">false</property>
					<property name="minlength" type="integer">6</property>
					<property name="maxlength" type="integer">7</property>
					<property name="required" type="boolean">true</property>
				</widget>
			</widget>
			<widget class="SwatFooterFormField">
				<widget class="SwatButton" id="submit_button">
					<property name="title" translatable="yes">Authenticate</property>
				</widget>
			</widget>
		</widget>
	</widget>
</swatml>
